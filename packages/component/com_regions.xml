<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0.0" method="upgrade" overwrite="true">
    <name>Regions</name>
    <identifier>com:regions</identifier>
    <author>Moyo Web Architects</author>
    <creationDate>October 2013</creationDate>
    <copyright>Copyright (C) 2013 Moyo Web Architects and Contributors. (http://www.moyoweb.nl)</copyright>
    <license>http://www.gnu.org/licenses/gpl.html GNU/GPL v3</license>
    <authorEmail>info@moyoweb.nl</authorEmail>
    <authorUrl>www.moyoweb.nl</authorUrl>
    <version>1.0.6</version>
    <description>Regions</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">install/install.sql</file>
        </sql>
    </install>

    <files folder="components/com_regions">
        <file>regions.php</file>
    </files>

    <administration>
        <menu>COM_REGIONS</menu>

        <files folder="administrator/components/com_regions">
            <file>dispatcher.php</file>
            <file>regions.php</file>

            <folder>databases</folder>
            <folder>install</folder>
            <folder>language</folder>
            <folder>models</folder>
            <folder>views</folder>
        </files>

        <languages folder="administrator/components/com_regions">
            <language tag="en-GB">language/en-GB/en-GB.com_regions.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_regions.sys.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_regions.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_regions.sys.ini</language>
        </languages>
    </administration>
</extension>
